[
  {
    "name": "明夫",
    "message": "じゃあ、行ってくるから。"
  },
  {
    "name": "真弓",
    "message": "…行ってらっしゃい。"
  },
  {
    "name": "たかふみ",
    "message": "…。"
  },
  {
    "message": "明夫は今からご出勤。"
  },
  {
    "message": "俺は今もリビングで大の字のまま。"
  },
  {
    "message": "今日は仕事が休みだからのんびりできる。"
  },
  {
    "message": "目覚めたのは少し前。"
  },
  {
    "message": "テーブルの上には牛乳パック。"
  },
  {
    "message": "パンが焼ける匂いも仄かに漂う。"
  },
  {
    "message": "まさに新婚家庭の朝って感じだ。"
  },
  {
    "message": "くそったれ。"
  },
  {
    "name": "明夫",
    "message": "城崎さんに宜しく言っといて。"
  },
  {
    "name": "真弓",
    "message": "…はい。"
  },
  {
    "message": "薄目を開けて二人を観察する。"
  },
  {
    "message": "グレーのスーツを着た明夫。"
  },
  {
    "message": "薬を盛られた割には朝から元気だ。"
  },
  {
    "message": "それと対照的なのが真弓。"
  },
  {
    "message": "肩越しに見える頬がとにかく蒼白い。"
  },
  {
    "message": "おまけに寝坊したのか、まだパジャマ姿。"
  },
  {
    "message": "…。"
  },
  {
    "message": "扉の閉まる音が聞こえてくる。"
  },
  {
    "message": "俺を残して出掛ける明夫がちょっと可哀想。"
  },
  {
    "message": "昨晩はあんたの奥さんとたっぷりセックス。"
  },
  {
    "message": "これじゃどっちが夫かわからない。"
  },
  {
    "name": "真弓",
    "message": "…。"
  },
  {
    "message": "送り出しの終わった真弓がこっちを向いた。"
  },
  {
    "message": "俺は慌てて寝返りをうつそぶり。"
  },
  {
    "message": "今度はラグに顔を埋めて俯せとなる。"
  },
  {
    "message": "…。"
  },
  {
    "message": "蛇口の開く音。"
  },
  {
    "message": "洗い物か？"
  },
  {
    "message": "いや、真弓は俺のほうに近づいてくる。"
  },
  {
    "message": "水道の音は止まってない。"
  },
  {
    "message": "足下に人の気配。"
  },
  {
    "message": "たぶん立ったまま俺を見下ろしてる。"
  },
  {
    "name": "たかふみ",
    "message": "…？"
  },
  {
    "message": "なんだ、こいつ。"
  },
  {
    "message": "いきなり真弓が俺に跨ってきた。"
  },
  {
    "message": "ちょうどお尻の真上あたり。"
  },
  {
    "message": "腰を下ろして背中に片手をつく。"
  },
  {
    "message": "おいおい。"
  },
  {
    "message": "朝からセックスのおねだりかよ。"
  },
  {
    "message": "あんたって本当に好きモノだな。"
  },
  {
    "message": "ざくっ！！"
  },
  {
    "name": "たかふみ",
    "message": "！？"
  },
  {
    "message": "しまった。"
  },
  {
    "message": "油断した。"
  },
  {
    "message": "首が灼けるように熱い。"
  },
  {
    "message": "一瞬にして目の前が薄暗くなる。"
  },
  {
    "message": "血が噴き出してるのもハッキリわかった。"
  },
  {
    "message": "背中が重い。"
  },
  {
    "message": "俺の身体を押さえるように、真弓が覆い被さってくる。"
  },
  {
    "message": "たぶん息絶えるのを見届けるつもりだ。"
  },
  {
    "message": "ちくしょう。"
  },
  {
    "message": "もがいてやる。"
  },
  {
    "name": "真弓",
    "message": "っ…。"
  },
  {
    "message": "…？"
  },
  {
    "message": "何か変だ。"
  },
  {
    "message": "真弓が俺の頬にキスしてる。"
  },
  {
    "message": "腕を床との隙間に潜り込ませ。"
  },
  {
    "message": "押さえつけると言うより、ぎゅっと抱きしめる感じ。"
  },
  {
    "message": "何だよ。"
  },
  {
    "message": "刺してすぐ後悔か？"
  },
  {
    "message": "これだから女は嫌なんだ。"
  },
  {
    "message": "…。"
  },
  {
    "message": "もういいや。"
  },
  {
    "message": "もがくのはよそう。"
  },
  {
    "message": "強がってみたが身体に力も入らない。"
  },
  {
    "message": "意識だってどんどん遠のいていく。"
  },
  {
    "message": "こりゃだめだ。"
  },
  {
    "message": "たぶん動脈を切られた。"
  },
  {
    "message": "すぐに救急車を呼ばない限りまず助からない。"
  },
  {
    "name": "真弓",
    "message": "ぅ…。"
  },
  {
    "message": "潜り込んだ真弓の腕が俺の胸をまさぐる。"
  },
  {
    "message": "愛おしそうに頬を擦りつけてくる。"
  },
  {
    "message": "俺、女に抱きしめられたのって初めてかも。"
  },
  {
    "message": "母ちゃんからもされた事はなかった。"
  },
  {
    "message": "少なくとも記憶には残ってない。"
  },
  {
    "message": "けっこういいもんだな。"
  },
  {
    "message": "刺されたところは痛いけど。"
  },
  {
    "message": "…。"
  },
  {
    "message": "…あれ？"
  },
  {
    "message": "だんだん腕の力が弱くなってくる。"
  },
  {
    "message": "もっと強く抱いてくれよ。"
  },
  {
    "message": "母親みたいにさ。"
  },
  {
    "message": "…。"
  },
  {
    "message": "そうか。"
  },
  {
    "message": "やっとわかった。"
  },
  {
    "message": "あんたも事切れようとしてるんだろ。"
  },
  {
    "message": "道理で背中が生温かいわけだ。"
  },
  {
    "message": "無理心中ってやつか？"
  },
  {
    "message": "けっこう過激だね。"
  },
  {
    "message": "そんな事までする女だとは思わなかったよ。"
  },
  {
    "message": "…。"
  },
  {
    "message": "まいったな。"
  },
  {
    "message": "でも、もういい。"
  },
  {
    "message": "どっちにしろいつか死ぬんだから。"
  },
  {
    "message": "長く生きてもロクな事はないし。"
  },
  {
    "message": "もし来世ってモンがあるなら。"
  },
  {
    "message": "今度はあんたが母親になって欲しい。"
  },
  {
    "message": "いっぱい抱きしめてもらえそうだからな。"
  },
  {
    "message": "私はそんなのいやだって？"
  },
  {
    "message": "大丈夫。"
  },
  {
    "message": "そのうち俺は立派な男の子に成長する。"
  },
  {
    "message": "そうなったら感謝の気持ちを込めて…。"
  },
  {
    "message": "…ちゃんとあんたを犯してあげる…"
  }
]